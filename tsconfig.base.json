{
    "compileOnSave": true,
    "compilerOptions": {
        "declaration": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "sourceMap": true,
        "strict": true,
        "target": "es2017",
        "baseUrl": "./",
        "paths": {
            "src/*": ["src/*"],
            "tests/*": ["tests/*"]
        }
    },
    "types": [
        "fs-extra",
        "sharp"
    ],
    "exclude": [
        "dist",
        "out"
    ]
}
